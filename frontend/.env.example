# Frontend environment variables
# Set to true to enable mock data fallback
VITE_USE_MOCKS=false

# Keycloak OIDC settings
VITE_KEYCLOAK_URL=https://keycloak.halceon.io
VITE_KEYCLOAK_REALM=platforms
VITE_KEYCLOAK_CLIENT_ID=kubelens
# Optional override (defaults to current origin + path)
# VITE_KEYCLOAK_REDIRECT_URI=http://localhost:3000/

# Optional: paste a Keycloak access token for local dev
# VITE_KUBELENS_TOKEN=eyJhbGciOi...
